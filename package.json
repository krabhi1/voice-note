{
	"name": "voice-note",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"db:generate": "drizzle-kit generate --config ./drizzle.local.config.ts",
		"db:migrate:local": "wrangler d1 migrations apply voice-note --local",
		"db:migrate:remote": "wrangler d1 migrations apply voice-note --remote",
		"db:push": "drizzle-kit push",
		"db:studio": "DATABASE_URL=$(find .wrangler/state/v3/d1 -name '*.sqlite' | head -n 1) pnpm drizzle-kit studio --config ./drizzle.local.config.ts",
		"ba:generate": "DATABASE_URL=$(find .wrangler/state/v3/d1 -name '*.sqlite' | head -n 1) pnpx @better-auth/cli generate --output src/lib/server/auth/schema.ts",
		"clean": "rm -rf .svelte-kit build node_modules .wrangler"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251014.0",
		"@libsql/client": "^0.15.15",
		"@sveltejs/adapter-cloudflare": "^7.2.3",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@tailwindcss/vite": "^4.1.13",
		"@types/node": "^22",
		"@vitest/browser": "^3.2.4",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.5",
		"playwright": "^1.55.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"tailwindcss": "^4.1.13",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.1.0",
		"wrangler": "^4.45.2"
	},
	"dependencies": {
		"better-auth": "^1.3.34",
		"nanoid": "^5.1.6",
		"zod": "^4.1.12"
	}
}
